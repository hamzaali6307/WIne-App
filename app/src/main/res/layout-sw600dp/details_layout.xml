<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relitive"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jgabrielfreitas.core.BlurImageView
        android:id="@+id/dogBlurImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/logo"
        app:radius="2" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/bck_img"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/circle_back"
                    app:title="Wine Details"
                    app:titleTextColor="@android:color/white" />
                <ImageView
                    android:id="@+id/btn_wish"
                    android:layout_alignParentEnd="true"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/circle_wish"
                    app:title="Wine Details"
                    app:titleTextColor="@android:color/white" />
            </RelativeLayout>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/appbar"
                android:elevation="@dimen/_15sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    tools:ignore="MissingConstraints">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:gravity="center"

                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/_170sdp"
                                android:layout_height="@dimen/_200sdp"
                                android:layout_margin="@dimen/_2sdp"
                                android:orientation="vertical"
                                app:cardCornerRadius="@dimen/_5sdp">

                                <ImageView
                                    android:id="@+id/img_wine"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"

                                    android:adjustViewBounds="true"
                                    android:background="@mipmap/noimage"
                                    android:scaleType="center" />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/txt_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:maxLines="1"
                                android:paddingLeft="@dimen/_5sdp"
                                android:text="points gain"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/_22sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txt_year"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:text="year"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_13sdp" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/carview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_10sdp">

                                <LinearLayout
                                    android:id="@+id/linear_share"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/darker_gray"
                                    android:orientation="vertical"
                                    android:padding="@dimen/_10sdp">
                                    <TextView
                                        android:textSize="@dimen/_9sdp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="I am having a glass of ...." />

                                    <LinearLayout
                                        android:weightSum="2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">
                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent">
                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:orientation="vertical">

                                                <androidx.cardview.widget.CardView
                                                    android:layout_width="@dimen/_60sdp"
                                                    android:layout_height="@dimen/_60sdp"
                                                    android:layout_margin="@dimen/_2sdp"
                                                    android:orientation="vertical"
                                                    app:cardCornerRadius="@dimen/_5sdp">

                                                    <ImageView
                                                        android:id="@+id/img_win"
                                                        android:padding="@dimen/_1sdp"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="match_parent"
                                                        android:src="@mipmap/splash" />
                                                </androidx.cardview.widget.CardView>

                                                <TextView
                                                    android:id="@+id/txt_yr"
                                                    android:gravity="center"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:text="year" />

                                            </LinearLayout>
                                            <LinearLayout
                                                android:layout_marginLeft="@dimen/_5sdp"
                                                android:gravity="center"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:orientation="vertical">

                                                <TextView
                                                    android:fontFamily="@font/baloo_bhai"
                                                    android:id="@+id/txt_nam"
                                                    android:textSize="@dimen/_10sdp"
                                                    android:text="wine name"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    />

                                                <TextView
                                                    android:id="@+id/txt_pd"
                                                    android:textSize="@dimen/_10sdp"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:text="pdo" />
                                                <LinearLayout
                                                    android:gravity="center"
                                                    android:layout_gravity="center"
                                                    android:orientation="horizontal"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content">
                                                    <RatingBar
                                                        android:id="@+id/rat"
                                                        style="@style/Widget.AppCompat.RatingBar.Small"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="match_parent"
                                                        android:layout_gravity="right"
                                                        android:layout_marginEnd="@dimen/_5sdp"
                                                        android:theme="@style/RatingBar" />
                                                    <TextView
                                                        android:gravity="center"
                                                        android:id="@+id/txt_rat"
                                                        android:textSize="@dimen/_8sdp"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="match_parent"
                                                        android:text="rating" />

                                                </LinearLayout>

                                            </LinearLayout>
                                        </LinearLayout>

                                        <View
                                            android:layout_marginLeft="@dimen/_10sdp"
                                            android:background="@color/black"
                                            android:layout_width="1dp"
                                            android:layout_height="match_parent"/>
                                        <LinearLayout
                                            android:layout_marginLeft="@dimen/_10sdp"
                                            android:gravity="center"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <androidx.cardview.widget.CardView
                                                android:layout_width="@dimen/_60sdp"
                                                android:layout_height="@dimen/_60sdp"
                                                android:layout_margin="@dimen/_2sdp"
                                                app:cardCornerRadius="@dimen/_5sdp">
                                                <ImageView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:src="@mipmap/splash" />
                                            </androidx.cardview.widget.CardView>
                                            <TextView
                                                android:textSize="@dimen/_10sdp"
                                                android:gravity="center"
                                                android:layout_gravity="center"
                                                android:layout_width="match_parent"
                                                android:layout_weight="1"                                            android:layout_height="wrap_content"
                                                android:text="The Wine App" />


                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_10sdp">

                                <ImageView
                                    android:id="@+id/shareInts"
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_gravity="right"
                                    android:background="@drawable/circle_share"
                                    android:drawableLeft="@android:drawable/ic_menu_share"
                                    android:textColor="@color/white" />

                                <ImageView
                                    android:id="@+id/imgfav"
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_alignParentEnd="true"
                                    android:background="@drawable/circle_fav" />
                            </RelativeLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/back"
                            android:orientation="vertical"
                            android:padding="@dimen/_10sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_5sdp"
                                android:text="Details"
                                android:textSize="@dimen/_17sdp" />

                            <View
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="2dp"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:background="@color/colorPrimaryDark" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="@dimen/_5sdp"
                                        android:text="Type: "
                                        android:textStyle="bold"
                                        android:textSize="@dimen/_14sdp" />
                                    <TextView
                                        android:id="@+id/txt_type"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="@dimen/_5sdp"
                                        android:text="type of wine"
                                        android:textSize="@dimen/_14sdp" />

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_alignParentEnd="true"
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:paddingLeft="@dimen/_5sdp"
                                        android:text="Price: "
                                        android:textSize="@dimen/_14sdp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/txt_price"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="@dimen/_5sdp"
                                        android:gravity="center"
                                        android:text="price"
                                        android:textSize="@dimen/_14sdp"
                                        />
                                </LinearLayout>

                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:paddingLeft="@dimen/_5sdp"
                                        android:text="Country: "
                                        android:textSize="@dimen/_14sdp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/txt_country"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="@dimen/_5sdp"
                                        android:text="country"
                                        android:textSize="@dimen/_14sdp"
                                        />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_alignParentEnd="true"
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:paddingLeft="@dimen/_5sdp"
                                        android:text="Pdo: "
                                        android:textSize="@dimen/_14sdp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/txt_pdo"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginEnd="@dimen/_5sdp"
                                        android:text="pdo"
                                        android:textSize="@dimen/_14sdp" />
                                </LinearLayout>


                            </RelativeLayout>

                            <RatingBar
                                android:id="@+id/rating"
                                style="@style/Widget.AppCompat.RatingBar.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_gravity="right"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_5sdp"
                                android:theme="@style/RatingBar" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_10sdp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <RatingBar
                                    android:id="@+id/giv_rating"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_gravity="center"
                                    android:paddingBottom="@dimen/_5sdp"
                                    android:theme="@style/RatingBar" />

                                <Button
                                    android:id="@+id/btn_submit"
                                    android:layout_width="@dimen/_150sdp"
                                    android:layout_height="@dimen/_35sdp"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/_2sdp"
                                    android:background="@color/background"
                                    android:fontFamily="@font/baloo_bhai"
                                    android:padding="@dimen/_5sdp"
                                    android:text="submit your rating"
                                    android:textColor="@color/white" />


                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="?attr/actionBarSize"
                        android:padding="@dimen/_5sdp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/login_shape"
                                android:fontFamily="@font/baloo_thambi"
                                android:padding="@dimen/_5sdp"
                                android:text="Reviews"
                                android:textColor="@color/white" />


                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_5sdp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/error"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/baloo_thambi"
                            android:gravity="center"
                            android:text="No reviews found :("
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/_20sdp" />

                    </RelativeLayout>

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>


